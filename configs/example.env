# GOMP Configuration Example
# Copy this file to .env and modify as needed

# Service Configuration
SERVICE_NAME=gomp
VERSION=1.0.0
ENVIRONMENT=production
LOG_LEVEL=info
LOG_FORMAT=json

# Network Configuration
LISTEN_ADDR=0.0.0.0
LISTEN_PORT=3333

# Bitcoin Core Configuration
BITCOIN_RPC_HOST=localhost
BITCOIN_RPC_PORT=8332
BITCOIN_RPC_USER=your_rpc_user
BITCOIN_RPC_PASSWORD=your_rpc_password
BITCOIN_ZMQ_ADDR=tcp://localhost:28332

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_GROUP_ID=gomp

# Database Configuration
POSTGRES_URL=postgres://gomp:password@localhost:5432/gomp?sslmode=disable
REDIS_URL=redis://localhost:6379/0
INFLUX_URL=http://localhost:8086
INFLUX_TOKEN=your_influx_token
INFLUX_ORG=gomp
INFLUX_BUCKET=mining

# Pool Configuration
POOL_FEE_PERCENT=1.0
PPLNS_WINDOW_FACTOR=2.0
MIN_DIFFICULTY=1.0
MAX_DIFFICULTY=1000000.0
VARDIFF_TARGET=30s
VARDIFF_RETARGET=90s

# Performance Configuration
MAX_CONNECTIONS=10000
READ_TIMEOUT=30s
WRITE_TIMEOUT=30s
IDLE_TIMEOUT=120s
MAX_MESSAGE_SIZE=4096
BUFFER_SIZE=8192
WORKER_POOL_SIZE=100